<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    >

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:fontFamily="@font/font_awesome_solid"
            android:text="\uf060"
            android:textSize="23sp"
            android:textColor="#FDFDFD"/>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:text="MOBILE LEGENDS"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            />

    </LinearLayout>

    <!--  Item's Image  -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobile_legends"
        />



    <!--  Diamonds Remainder Info -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="295dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436">
        <ProgressBar
            android:id="@+id/remainder"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressBackgroundTint="@color/grey"
            android:progressTint="@color/light_green"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="289dp" />
        <TextView
            android:id="@+id/remainderDesc"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:text="7777 diamonds left"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="8sp"
            android:textColor="#8B8D8C"
            android:textAlignment="textEnd"
            />

    </RelativeLayout>



    <!-- Item Description   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/description"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Item's Description"
            android:textSize="11dp"
            android:textColor="#0D5D63"
            />

        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppins_reguler"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus accumsan et viverra justo commodo. Proin sodales pulvinar sic tempor. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. "
            android:textSize="8dp"
            android:textColor="#43A19F"
            android:textAlignment="textStart"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="77dp"
            android:background="#8B8D8C"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="83dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/font_awesome_solid"
            android:text="\ue1f3"
            android:textColor="#0D5D63"
            />
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="83dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="9sp"
            android:textColor="#0D5D63"
            android:text="IDR 10.000,00"
            />

    </RelativeLayout>

    <!-- Purchase Form  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Purchase"
            android:textColor="#FDFDFD"
            android:textSize="15sp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginTop="25dp"
            android:textColor="#FDFDFD"
            android:textSize="10sp"
            android:text="Email"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/input_text"
            android:hint="Enter email address"
            android:paddingHorizontal="5dp"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="6sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginTop="65dp"
            android:textColor="#FDFDFD"
            android:textSize="10sp"
            android:text="Username"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/input_text"
            android:paddingHorizontal="5dp"
            android:hint="Enter username"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="6sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="13dp"
            android:layout_marginTop="110dp"
            android:text="Quantity"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="10sp"
            android:textColor="#FDFDFD"
            />
        <TextView
            android:id="@+id/decrement"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/font_awesome_solid"
            android:text="\uf056"
            android:textColor="#FDFDFD"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="20dp"
            android:layout_height="13dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="305dp"
            android:text="0"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="10sp"
            android:textColor="#FDFDFD"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/increment"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="340dp"
            android:fontFamily="@font/font_awesome_solid"
            android:text="\uf055"
            android:textColor="#FDFDFD"
            android:textAlignment="center"
            />
        <!-- Purchase for -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="135dp"

            >
            <TextView
                android:layout_width="82dp"
                android:layout_height="13dp"
                android:text="Purchase cash for"
                android:fontFamily="@font/poppins_reguler"
                android:textSize="10sp"
                android:textColor="#FDFDFD"/>
            <TextView
                android:id="@+id/purchaseItem"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text="Mobile Legends"
                android:fontFamily="@font/poppins_bold"
                android:textSize="11sp"
                android:textColor="#FDFDFD"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="160dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_reguler"
                android:textSize="10dp"
                android:text="Total Payment"
                android:textColor="#FDFDFD"
                />
            <TextView
                android:id="@+id/totalPay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_bold"
                android:textSize="10dp"
                android:text="IDR 0,00"
                android:textColor="#FDFDFD"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="190dp">
            <Button
                android:id="@+id/buyBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:backgroundTint="#040605"
                android:text="BUY"
                android:fontFamily="@font/poppins_bold"
                android:textSize="13dp"
                android:textAlignment="center"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bgDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp"
        android:background="@drawable/description"
        >

        <TextView
            android:id="@+id/closeBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="23dp"
            android:textAlignment="center"
            android:textColor="@color/light_green"
            android:fontFamily="@font/font_awesome_solid"
            android:textSize="30sp"
            android:text="\uf057"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="65dp"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_error"
            android:fontFamily="@font/font_awesome_solid"
            android:text="\uf071"
            android:textSize="75sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="145dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_black"
            android:textColor="@color/design_default_color_error"
            android:textSize="13sp"
            android:text="Warning!"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_black"
            android:textColor="@color/light_green"
            android:text="Error message"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>